<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbnu.b_todoapp.mapper.TodoMapper">

    <select id="findAll" resultType="com.hbnu.b_todoapp.domain.Todo">
        SELECT * FROM todos
    </select>

    <insert id="insert" parameterType="com.hbnu.b_todoapp.domain.Todo">
        INSERT INTO todos(title, completed)
        VALUES (#{title}, #{completed})
    </insert>

    <update id="update" parameterType="com.hbnu.b_todoapp.domain.Todo">
        UPDATE todos
        SET title = #{title}, completed = #{completed}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM todos WHERE id = #{id}
    </delete>

</mapper>
